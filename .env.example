# ── Kafka ─────────────────────────────────────────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC=binance-trades
KAFKA_DLQ_TOPIC=binance-trades-dlq
KAFKA_FLUSH_EVERY=100

# ── Binance WebSocket ─────────────────────────────────────────────────────────
BINANCE_WS_URL=wss://data-stream.binance.vision/stream
# Comma-separated trading pairs (uppercase, no slash)
SYMBOLS=BTCUSDT

# ── Reconnection ──────────────────────────────────────────────────────────────
RECONNECT_DELAY_S=5.0
MAX_RECONNECT_DELAY_S=60.0

# ── Health server ─────────────────────────────────────────────────────────────
HEALTH_PORT=8080
